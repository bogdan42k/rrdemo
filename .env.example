# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/dbname"
# For SQLite (development): DATABASE_URL="file:./dev.sqlite"

# Session Security
SESSION_SECRET="your-super-secret-session-key-change-in-production"
# Generate with: openssl rand -base64 32

# Registration IP Restriction
# Comma-separated list of allowed IP addresses for registration
# Leave empty or remove to allow registration from any IP
DEV_IPS="127.0.0.1,192.168.1.100"

# Environment
NODE_ENV="production"

# SMTP
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER="your-workspace-email@yourdomain.com"
SMTP_PASSWORD="your-app-password-or-credentials"
SMTP_FROM_EMAIL="noreply@yourdomain.com"
SMTP_FROM_NAME="Your App Name"
